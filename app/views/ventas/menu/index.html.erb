<!-- page content -->
<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>Agrupador clientes</h3>
      </div>
    </div>
    <div class="clearfix"></div>
        <div class="x_panel">
          <div class="x_title">
            <div class="row">
              <form id="form_buscar" action="/ventas/agrupador_clientes" class="form-horizontal form-label-left">
                <div class="row">
                  <div class="col-md-3 col-sm-6 col-xs-12">
                    <input placeholder="Nombre ..." type="text" name="buscar" id="buscar" class="form-control" value="<%= @buscar %>"/>
                  </div>
                  <div class="col-md-2 col-sm-3 col-xs-12">
                    <input type="submit" value="Buscar" class="btn btn-primary form-control"/>
                  </div>
                  <div class="col-md-offset-5 col-md-2 col-sm-3 col-xs-12">
                    <%= link_to 'Nuevo', new_ventas_agrupador_cliente_path, {class: 'btn btn-primary form-control'} %>
                  </div>
                </div>
              </form>
            </div>
            <div class="clearfix"></div>
          </div>
          <div class="x_content" style="display: block;">
            <div class="row bg-primary hidden-xs">
              <div class="col-md-10 col-sm-10 col-xs-10"><strong>AGRUPADOR</strong></div>
              <div class="col-md-2 col-sm-2 col-xs-2"><strong>ACCIONES</strong></div>
            </div>
            <br>
            <% @ventas_agrupador_clientes.each do |r| %>
                <div class="row">
                  <div class="col-md-11 col-sm-10 col-xs-12">
                    <a href="/ventas/agrupador_clientes/<%= r.id %>">
                      <b>
                        <%= r.nombre %> <br>
                      </b>
                      <%= r.descripcion %>
                    </a>
                  </div>
                  <div class="col-md-1 col-sm-2 col-xs-12">
                    <a class="btn btn-primary form-control" href="/ventas/agrupador_clientes/<%= r.id %>">Editar</a>
                  </div>
                </div>
                <br>
            <% end %>
          </div>
        </div>
      </div>
</div>
<!-- /page content -->