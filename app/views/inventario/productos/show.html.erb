<div class="form-horizontal form-label-left">
	<div class="right_col" role="main">
		<div class="page-title">
			<div class="title_left">
				<h3>Producto ID: <%= @inventario_producto.id %></h3>
			</div>  
			<div class="title_right">
			</div>     
		</div>
		<div class="clearfix"></div>
		<div class="row">
			<div class="col-md-12 col-sm-12 col-xs-12">
				<div class="x_panel">
					<div class="x_title">
						<div class="form-group pull-right">
							<%= link_to 'Editar', edit_inventario_producto_path(@inventario_producto), {class: 'btn btn-success'} %>
							<%= link_to 'Eliminar', @inventario_producto, :class => 'btn btn-danger', :method => :delete, :data => { :confirm => 'Estás Seguro?' } %>
							<%= link_to 'Regresar', inventario_productos_path, {class: 'btn btn-primary'} %>
						</div>
						<div class="clearfix"></div>
					</div>
					<div class="x_content" style="display: block;">
            <div class="form-group">
              <label class="control-label col-md-3 col-sm-3 col-xs-12">
                Categoría
              </label>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <%= @inventario_producto.rel_categoria_producto.nombre %>
              </div>
            </div>
						<div class="form-group">
							<label class="control-label col-md-3 col-sm-3 col-xs-12">
								Nombre
							</label>
							<div class="col-md-6 col-sm-6 col-xs-12">
								<%= @inventario_producto.nombre %>
							</div>
						</div>
						<div class="form-group">
							<label class="control-label col-md-3 col-sm-3 col-xs-12">
								Descripción
							</label>
							<div class="col-md-6 col-sm-6 col-xs-12">
								<%= @inventario_producto.descripcion %>
							</div>
						</div>
						<div class="form-group">
							<label class="control-label col-md-3 col-sm-3 col-xs-12">
								Precio
							</label>
							<div class="col-md-6 col-sm-6 col-xs-12">
								<%= @inventario_producto.precio %>
							</div>
						</div> 
						<div class="ln_solid"></div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
