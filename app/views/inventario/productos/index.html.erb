<!-- page content -->
<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>Productos</h3>
      </div> 
      <div class="title_right">
      </div>          
    </div>
    <div class="clearfix"></div>
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
            <div class="row">
              <form id="form_buscar" action="/inventario/productos" class="form-horizontal form-label-left">
                <div class="col-md-3 col-sm-3 col-xs-3">
                  <input placeholder="Buscar..." type="text" name="buscar" id="buscar" class="form-control col-md-7 col-xs-12" value="<%=@buscar%>"/>
                </div>
                <div class="col-md-3 col-sm-3 col-xs-3">
                  <%= select_tag 'categoria', options_for_select(@categorias.collect {|a| [ a[:nombre], a[:id] ] }),{ include_blank: true, class:
                      'form-control' } %>
                </div>
                <div class="col-md-3 col-sm-3 col-xs-3">
                  <input type="submit" value="Buscar" class="btn btn-primary"/>
                </div>
                <div class="col-md-3 col-sm-3 col-xs-3">
                  <div class="pull-right">
                    <%= link_to 'Nuevo', new_inventario_producto_path, {class: 'btn btn-success'} %>
                  </div>
                </div>
              </form>
            </div>
            <div class="clearfix"></div>
          </div>
          <div class="x_content" style="display: block;">
              <ul class="content-list">
                <% @inventario_productos.each do |inventario_producto| %>
                    <li>
                      <h5>
                      <div class="row">
                        <div class="col-md-10 col-sm-10 col-xs-10">
                            <small><%= inventario_producto.categoria %></small> /
                            <a href="/inventario/productos/<%= inventario_producto.id %>">
                              <%= inventario_producto.nombre %>
                            </a>
                        </div>
                        <div class="col-md-2 col-sm-2 col-xs-2">
                          <div class="pull-right">
                            <%= inventario_producto.precio %>
                          </div>
                        </div>
                      </div>
                      </h5>
                    </li>
                  <% end %>
                </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- /page content -->
<script>
  $(document).ready(function() {
    $('#categoria').val('<%=@categoria_id%>');
  });
</script>
