<%= form_for @ventas_pedido, html: {class: 'form-horizontal form-label-left'} do |f| %>

    <% if @ventas_pedido.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@ventas_pedido.errors.count, "error") %> prohibited this ventas_pedido from being saved:</h2>

          <ul>
            <% @ventas_pedido.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>


<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>Nuevo Pedido</h3>
      </div>
      <div class="title_right">
        <div class="form-group pull-right">
          <%= f.submit 'Guadar', {class: 'btn btn btn-success'} %>
          <%= link_to 'Cancelar', ventas_pedidos_path, {class: 'btn btn-primary'} %>
        </div>
      </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
            <div class="clearfix"></div>
          </div>
          <div class="x_content" style="display: block;">

            <div class="form-group">
              <label for="ventas_cliente_agrupador_cliente_id" class="control-label col-md-3 col-sm-3 col-xs-12">
                Fecha
                <span class="required">*</span>
              </label>
              <div class="col-md-6 col-sm-6 col-xs-12">
                  <%= f.text_field :fecha, {value: Date.today, readonly:'readonly', class: 'form-control col-md-7 col-xs-12', required: 'required'} %>
              </div>
            </div>

            <div class="form-group">
              <label for="ventas_cliente_agrupador_cliente_id" class="control-label col-md-3 col-sm-3 col-xs-12">
                Cliente
                <span class="required">*</span>
              </label>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <%= f.collection_select(:cliente_id, @clientes, :id, :nombre, {include_blank: true}, {class: 'form-control col-md-7 col-xs-12', required: 'required'}) %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
    <script>
      $(document).ready(function() {

        $("#ventas_pedido_cliente_id").select2({
          placeholder: "Seleccione un cliente",
          allowClear: true
        });

        $('#ventas_pedido_fecha').daterangepicker({
          singleDatePicker: true,
          calender_style: "picker_4",
          format: 'YYYY-MM-DD',
          showDropdowns: true,
          maxDate: '<%= Date.today %>'
        });

      });
    </script>
<% end %>