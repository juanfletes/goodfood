<!-- page content -->
<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>Clientes</h3>
      </div>
      <div class="title_right">
      </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
            <div class="row">
              <form id="form_buscar" action="/ventas/clientes" class="form-horizontal form-label-left">
                <div class="row">
                  <div class="col-md-3 col-sm-4 col-xs-12">
                    <input placeholder="Nombre Cliente..." type="text" name="buscar" id="buscar" class="form-control" value="<%= @buscar %>"/>
                  </div>
                  <div class="col-md-3 col-sm-4 col-xs-12">
                    <%= select_tag 'agrupador', options_for_select(@agrupador_cliente.collect { |a| [a[:nombre], a[:id]] }),
                                   {include_blank: true, class: 'form-control'} %>
                  </div>
                  <div class="col-md-2 col-sm-4 col-xs-12">
                    <input type="submit" value="Buscar" class="btn btn-primary form-control"/>
                  </div>
                  <div class="col-md-offset-2 col-sm-offset-8 col-md-2 col-sm-4 col-xs-12">
                    <%= link_to 'Nuevo', new_ventas_cliente_path, {class: 'btn btn-primary form-control'} %>
                  </div>
                </div>
              </form>
            </div>
            <div class="clearfix"></div>
          </div>
          <div class="x_content" style="display: block;">
            <div class="row bg-primary hidden-xs">
              <div class="col-md-10 col-sm-10 col-xs-10"><strong>CLIENTE</strong></div>
              <div class="col-md-2 col-sm-2 col-xs-2"><strong>ACCIONES</strong></div>
            </div>
            <br>
            <% @ventas_clientes.each do |ventas_cliente| %>
                <div class="row">
                  <div class="col-md-11 col-sm-10 col-xs-12">
                    <a href="/ventas/clientes/<%= ventas_cliente.id %>">
                      <b>
                        <%= ventas_cliente.grupo %> <br>
                      </b>
                      <%= ventas_cliente.email %> /
                      <%= ventas_cliente.primer_apellido %> <%= ventas_cliente.segundo_apellido %> <%= ventas_cliente.primer_nombre %> <%= ventas_cliente.segundo_nombre %>
                    </a>
                  </div>
                  <div class="col-md-1 col-sm-2 col-xs-12">
                    <a class="btn btn-primary form-control" href="/ventas/clientes/<%= ventas_cliente.id %>">Editar</a>
                  </div>
                </div>
                <br>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- /page content -->
<script type="text/javascript" charset="utf-8">
  $(document).ready(function () {
    $('#agrupador').val('<%=@agrupador%>');
  });
</script>

